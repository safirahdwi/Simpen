<aside class="main-sidebar">
    <!-- sidebar: style can be found in sidebar.less -->
    <section class="sidebar">
        <!-- Sidebar user panel -->
        <div class="profile user-panel">
            <div class="pull-left image">
                <img src="~/img/user2-160x160.jpg" class="img-circle" alt="User Image">
            </div>
            <div class="pull-left info">
                <p>Username</p>
                
            </div>
        </div>
        <!-- search form -->
        <form action="#" method="get" class="sidebar-form">
            <div class="input-group">
                <input type="text" name="q" class="form-control" placeholder="Search...">
                <span class="input-group-btn">
                    <button type="submit" name="search" id="search-btn" class="btn btn-flat">
                        <i class="fa fa-search"></i>
                    </button>
                </span>
            </div>
        </form>
        <!-- /.search form -->
        <!-- sidebar menu: : style can be found in sidebar.less -->
        <ul class="sidebar-menu" data-widget="tree">
            <li class="header">MAIN NAVIGATION</li>
            <li class="treeview @(Html.IsMenuActive("/Dashboards") ? "active" : "")">
                <a href="#">
                    <i class="fa fa-dashboard"></i> <span>Dashboards</span>
                    <span class="pull-right-container">
                        <i class="fa fa-angle-left pull-right"></i>
                    </span>
                </a>
                <ul class="treeview-menu">
                    <li class="@(Html.IsMenuActive("/Dashboards/Dashboard1") ? "active" : "")">
                        <a asp-controller="Dashboards" asp-action="Dashboard1"><i class="fa fa-circle-o"></i> Dashboard v1</a>
                    </li>
                    <li class="@(Html.IsMenuActive("/Dashboards/Dashboard2") ? "active" : "")">
                        <a asp-controller="Dashboards" asp-action="Dashboard2"><i class="fa fa-circle-o"></i> Dashboard v2</a>
                    </li>
                </ul>
            </li>
            <li class="@(Html.IsMenuActive("/Default/DataTablesExample") ? "active" : "")">
                <a asp-controller="Default" asp-action="DataTablesExample">
                    <i class="fa fa-table"></i> <span>Data Tables</span>
                </a>
            </li>
            <li class="@(Html.IsMenuActive("/DaftarAnggota/Index") ? "active" : "")">
                <a asp-controller="DaftarAnggota" asp-action="Index">
                    <i class="fa fa-users"></i> <span>Daftar Anggota</span>
                </a>
            </li>
            <li class="@(Html.IsMenuActive("/OrganisasiOrmawa/Index") ? "active" : "")">
                <a asp-controller="OrganisasiOrmawa" asp-action="Index">
                    <i class="ion ion-ios-people-outline"></i> <span>Ormawa</span>
                </a>
            </li>
            <li class="treeview @(Html.IsMenuActive("/Referensi") ? "active" : "")">
                <a href="#">
                    <i class="fa fa-dashboard"></i> <span>Referensi</span>
                    <span class="pull-right-container">
                        <i class="fa fa-angle-left pull-right"></i>
                    </span>
                </a>
                <ul class="treeview-menu">
                    <li class="@(Html.IsMenuActive("/Referensi/JabatanOrmawa") ? "active" : "")">
                        <a asp-controller="Referensi" asp-action="Index"><i class="fa fa-circle-o"></i> Jabatan Ormawa</a>
                    </li>
                    <li class="@(Html.IsMenuActive("/Referensi/JenisDokumen") ? "active" : "")">
                        <a asp-controller="Referensi" asp-action="JenisOrmawa"><i class="fa fa-circle-o"></i> Dashboard v2</a>
                    </li>
                </ul>
            </li>
        </ul>
    </section>
    <!-- /.sidebar -->
</aside>
